@model IEnumerable<demo.Models.Photo>

@{
    ViewData["Title"] = "Index";
}

<h2>Photos</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Id
                </th>
                <th>
                    Photo
                </th>
                <th>
                    Description
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                <img src="@item.FileName" width="300px" />
            </td>
            <td>
                @item.Description
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>